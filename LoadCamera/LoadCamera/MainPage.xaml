<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoadCamera.MainPage">

    <ScrollView
        x:Name="scrollView_"
        BackgroundColor="Yellow">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="imageViewer"
                WidthRequest="400"
                HeightRequest="400"
                BackgroundColor="Purple"
                />

            <Button
                x:Name="grabImgBtn"
                Text="Grab Image"
                Clicked="grabImgBtn_Clicked"
                />

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

